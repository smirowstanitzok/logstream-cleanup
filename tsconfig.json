{
  "include": ["./src"],
  "exclude": ["node-modules"],
  "compilerOptions": {
    "outDir": "./build",
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true,
    "checkJs": false,
    "lib": ["dom", "es2020", "esnext"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strict": true
  },
  "typeAcquisition": {
    "enable": true
  }
}
